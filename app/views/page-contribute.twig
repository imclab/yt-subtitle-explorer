<head>
  <meta charset="utf-8">

  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/i/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Contribute</title>
  <meta name="description" content="">

  {% include 'meta.twig' %}
  
</head>
<body>

  {% import "videolist.twig" as videoList %}

  <div class="container">
  	
    <h1>Contribute</h1>

    <div class="row-fluid">
      
      {{ videoList.video(video, 6) }}

      <div class="span6 translation-ctrl">
        Have captions for:
        <ul>
        {% for cap in video.caption_links %}
          <li><a href="{{app.url_generator.generate('contribute_cap', { videoId: video.ytid, capId: cap.lang_code })}}">{{cap.lang_code}}</a></li>
        {% endfor %}
        </ul>
      </div>

    </div>
    
  </div>

</body>
</html>