<head>
  
  {% set root = app.url_generator.getContext().getBaseUrl() %}
  {% set cache_query = '?v=' ~ app.ytse_version %}

  <title>{% block title %}Translate{% endblock %}</title>
  <meta name="description" content="{% block description %}{% endblock %}">

  {% block meta %}
    {% include 'meta.twig' %}
  {% endblock %}

  {% block css %}
    {% include 'css.twig' %}
  {% endblock %}

  {% block js %}
    <script src="{{root}}/library/js/libs/modernizr.js{{cache_query}}"></script>
    <script>window.require = { urlArgs: "v={{app['ytse.config'].version}}" };</script>
    <script src="{{root}}/library/js/require.js{{cache_query}}" data-main="{{root}}/library/js/{% block bootfile %}core{% endblock %}"></script>
  {% endblock %}
  
</head>
<body>

  <div class="container {{containerClasses | default('')}}">

 	  {% block content %}
      <!-- empty -->
    {% endblock %}
    
    {% block footer %}
      {% include 'footer.twig' %}
    {% endblock %}
    
  </div>

</body>
</html>