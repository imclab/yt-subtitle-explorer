{% extends 'page-skeleton.twig' %}

{% block title %}Settings{% endblock %}
{% block description %}User settings page{% endblock %}

{% set containerClasses = 'settings' %}

{% block content %}
<h1 class="page-header">Profile <small>{{app.oauth.getUserName}}</small> {% include 'right-nav.twig' %}</h1>

<div class="row-fluid">
  <div class="span12">

	  <form action="{{app.url_generator.generate('user_profile_settings')}}" method="POST">
    	<legend>Settings</legend>
  	  
  	  <label class="control-label" for="email-notify-setting">
  	  	Email Notifications for Submissions
        <input type="checkbox" id="email-notify-setting" name="notifications" {{ user_settings.email_notifications ? 'checked="checked"' : '' }}/>
      </label>
      
      <button type="submit" class="btn btn-success">Save Settings</button>
      
    </form>
	</div>
</div>

{% endblock %}
