<head>
  <meta charset="utf-8">

  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/i/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Translate</title>
  <meta name="description" content="">

  <!-- Mobile viewport optimized: h5bp.com/viewport -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="library/css/bootstrap.min.css">
  <link rel="stylesheet" href="library/css/token-input.css">
  <link rel="stylesheet" href="library/css/token-input-facebook.css">
  <link rel="stylesheet" href="library/css/styles.css">

  <script src="library/js/libs/modernizr.js"></script>
  <script src="library/js/require.js" data-main="library/js/core"></script>
  
</head>
<body>

  <div class="container">
  	<div id="language-search-wrap" class="well" data-all-langs="{{app.url_generator.generate("langall")}}">
  		<h2>MinutePhysics Translations</h2>

      <div>

        <span>Search for videos that </span>

        <span class="btn-group toggle-group" id="negate-ctrl">
          <button class="btn btn-small active" type="button" data-val="with">do</button>
          <button class="btn btn-small" type="button" data-val="without">don't</button>
        </span>
        
        <span>have translations for</span>

        <span class="btn-group toggle-group" id="scope-ctrl">
          <button class="btn btn-small active" type="button" data-val="any">some</button>
          <button class="btn btn-small" type="button" data-val="every">all</button>
        </span>

        <span>of the following languages:</span>
      </div>
  		
      <div id="lang-search">
  		  <input type="text" name="lang-search" data-autocomplete-url="{{app.url_generator.generate("langmeta")}}"/>
      </div>
  	</div>
    
    <div class="row-fluid">
    {{body | raw}}
    </div>
  </div>

</body>
</html>